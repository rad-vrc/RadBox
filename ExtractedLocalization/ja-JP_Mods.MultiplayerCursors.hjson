Configs: {
	ClientConfig: {
		DisplayName: クライアント設定

		Transparency: {
			Label: 透明度
			Tooltip: 他のプレーヤーのカーソルの透過度を調整します
		}

		ShowItemIcons: {
			Label: アイテムアイコンを表示
			Tooltip: 有効時、他プレイヤーが所持するアイテムを表示します
		}

		SyncWaitFrames: {
			Label: クライアント同期待ちフレーム
			Tooltip:
				'''
				クライアントがサーバにカーソルデータを送信するまでの待機フレーム数を調整します。
				値を高くするとネットワーク負荷が軽減されますが、カーソルの動きがカクつくことになります。
				'''
		}
	}

	ServerConfig: {
		DisplayName: サーバー設定

		SyncWaitFrames: {
			Label: サーバー同期待ちフレーム
			Tooltip:
				'''
				サーバーがカーソルデータをクライアントに送信するまでの待機するフレーム数を調整します。
				値を高くするとネットワーク負荷が軽減されますが、カーソルの動きがカクつくことになります。
				'''
		}
	}
}

